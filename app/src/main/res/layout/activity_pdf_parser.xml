<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.PdfParserActivity">

    <TextView
        android:id="@+id/loadingFlightsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/loadingFlights"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/loadingAirportsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/loadingAirports"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadingFlightsText"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/readingFileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/readingFile"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadingAirportsText"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/readingFileCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✅"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/readingFileText"
        app:layout_constraintTop_toTopOf="@+id/readingFileText"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/savingFlightsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/savingFlights"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readingFileText"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/savingFlightsCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✅"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/savingFlightsText"
        app:layout_constraintTop_toTopOf="@+id/savingFlightsText"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/startingMainActivityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/startingJoozdlog"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savingFlightsText"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>