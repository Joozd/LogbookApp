    <style name="NumberBox.secondaryBackground">
        <item name="android:background">@drawable/rounded_corners_secondarybackground</item>
    </style>


    <!-- style for selectors like "sim" or "instructor" in editFlightFragment -->
    <style name="SelectorStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="SelectorStyleInactive" parent="SelectorStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SelectorStyleActive" parent="SelectorStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">1.0</item>
        <item name="android:background">@drawable/rounded_corners_primarybackground</item>
    </style>


    <style name="NotBoldCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">normal</item>
    </style>


    <!-- New User Activity Styles -->
    <style name="NewUserActivityLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSecondaryBackground</item>
    </style>

    <!-- FlightsList styles -->
    <style name="FlightListStyle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
