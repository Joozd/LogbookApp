<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->

    <style name="DatePicker" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="colorAccent">?attr/colorPrimaryDark</item>
    </style>


    <!-- Dialog Styles -->

    <style name="DialogBackground" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorDialogBackgroundFilter</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="DialogLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="DialogHeaderLayout" parent="DialogLayout">
        <item name="android:background">@drawable/top_corners_primarybackgrounddark</item>
    </style>

    <style name="DialogBodyLayout" parent="DialogLayout">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bottom_corners</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="DialogHeaderText" parent="HeaderText.Bold">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


    <style name="TestText" parent="HeaderText.Bold">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="DialogHeaderSubText" parent="HeaderSubText">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="DialogClickableText" parent="Text.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ExpandableListTitleLayout" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="ExpandableListItemLayout" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/colorTextViewBackground</item>
    </style>

    <style name="ExpandableListTitleText" parent="DialogHeaderText">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExpandableListItemText" parent="SecondaryText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExpandableListItemText.Value">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="FloatingAddButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">6dp</item>



    </style>


    <style name="ToolBar">
        <item name="android:theme">@style/ToolBarTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">2dp</item>
    </style>item

    <style name="MenuItemStyle" parent="AppTheme">
        <item name="android:textAppearance">@style/SecondaryText</item>
        <item name="background">?attr/colorTextViewBackground</item>
    </style>

    <style name="appearance_aircraft_local" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_from_flights" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_from_flights_conflicting" parent="@android:style/TextAppearance">
            <item name="android:textColor">@color/orange</item>
            <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_forced_type" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_other_user" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_not_found" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style parent="@android:style/Widget.Spinner" name="SpinnerAsEditText">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>


    <!-- App-wide styles -->

    <style name="PrimaryText" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderText" parent="PrimaryText">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HeaderText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderText.Bold.AllCaps">
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="HeaderSubText" parent="PrimaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="Text" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SecondaryText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TertiaryText" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TertiaryTextSingleLine" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

    </style>
    <style name="TertiaryTextHeader" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="SecondaryTextHyperLink" parent="SecondaryText">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCentered" parent="Text">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SecondaryTextCentered" parent="SecondaryText">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SecondaryTextCentered.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonTextDisabled" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SeparatorLine" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>


    <style name="SpinnerFrameTheme" parent="AppTheme">
        <item name="android:textColorSecondary">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="SpinnerFrameStyle" parent="SettingsActivitySubText">
        <item name="android:theme">@style/SpinnerFrameTheme</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners_secondarybackground</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SpinnerFrameStyle.TextBackground" parent="SettingsActivitySubText">
        <item name="android:theme">@style/SpinnerFrameTheme</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners_textviewbackground</item>
        <item name="android:padding">2dp</item>

        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="SpinnerDropDownItemStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#20808080</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="EditFlightInputLayout" parent="InputLayout">
        <item name="boxStrokeColor">@color/edit_flight_textbox_colors</item>
        <item name="android:textColorHint">?attr/colorPrimaryDark</item>
    </style>


    <style name="EditFlightInputLayout.HorizontalSpacing">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="EditFlightInputLayout.VerticalSpacing">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="EditFlightInputLayout.HorizontalSpacing.VerticalSpaced">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="EditFlightEditText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
        <!-- item name="android:importantForAutofill">no</item --> <!-- in v26\styles.xml -->
        <item name="android:imeOptions">actionNext</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="singleLine">true</item>
    </style>

    <style name="EditFlightEditTextBold" parent="EditFlightEditText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditFlightCheckBox" parent="SecondaryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>


    <style name="DataBox" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/rounded_corners_secondarybackground</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Card" parent="AppTheme">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners_textviewbackground</item>

    </style>

    <style name="DataBox.TextViewBackground">
        <item name="android:background">@drawable/rounded_corners_textviewbackground</item>
    </style>

    <style name="DataBox.TextViewBackground.Padded">
        <item name="android:padding">16dp</item>
    </style>

    <style name="DataBox.Padded">
        <item name="android:padding">16dp</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
    </style>


    <style name="OutlinedBox" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- this needs a textview with style OutlinedBoxTitle as title-->
    <style name="OutlinedBox.Titled">
        <item name="android:background">@drawable/background_box_title_padding</item>
    </style>

    <style name="OutlinedBoxTitle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorTextViewBackground</item>
        <item name="android:textColor">@color/edit_flight_textbox_colors</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>


