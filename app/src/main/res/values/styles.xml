<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#AED6F1</item>
        <item name="colorPrimaryDark">#85C1E9</item>
        <item name="colorPrimaryBackground">#F0FAFF</item>
        <item name="colorAccent">#0000E0</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textColorSecondary">#CC000000</item> <!-- #CC3F51B5 -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorTertiary">#80000000</item>
        <item name="android:textColorHighlight">#CC3F51B5</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:colorButtonNormal">#FFA0A0A0</item>
    </style>
    <style name="DatePicker" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColor">#0000E0</item>
        <item name="colorAccent">#85C1E9</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/joozdlog_splash</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
        <item name="colorPrimary">#AED6F1</item>
        <item name="colorPrimaryDark">#85C1E9</item>
        <item name="colorAccent">#0000E0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">#CC000000</item> <!-- #CC3F51B5 -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorTertiary">#80000000</item>
        <item name="android:textColorHighlight">#CC3F51B5</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">#80000000</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="appearance_aircraft_local" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_from_flights" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_from_flights_conflicting" parent="@android:style/TextAppearance">
            <item name="android:textColor">@color/orange</item>
            <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_forced_type" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_other_user" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_not_found" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style parent="@android:style/Widget.Spinner" name="SpinnerAsEditText">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="expandableListGroupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#85C1E9</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>



</resources>