<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->

    <style name="DatePicker" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColor">#0000E0</item>
        <item name="colorAccent">#85C1E9</item>
    </style>

    <style name="ToolBar">
        <item name="android:theme">@style/ToolBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="appearance_aircraft_local" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_from_flights" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_from_flights_conflicting" parent="@android:style/TextAppearance">
            <item name="android:textColor">@color/orange</item>
            <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_forced_type" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_other_user" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="appearance_aircraft_not_found" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style parent="@android:style/Widget.Spinner" name="SpinnerAsEditText">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="expandableListGroupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#85C1E9</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <!-- App-wide styles -->

    <style name="PrimaryText" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderText" parent="PrimaryText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="Text" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SecondaryText" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TertiaryText" parent="AppTheme">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="SecondaryTextHyperLink" parent="SecondaryText">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCentered" parent="Text">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SecondaryTextCentered" parent="SecondaryText">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DialogButtonText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonTextDisabled" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SeparatorLine" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>


    <style name="SpinnerFrameTheme" parent="AppTheme">
        <item name="android:textColorSecondary">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="SpinnerFrameStyle" parent="SettingsActivitySubText">
        <item name="android:theme">@style/SpinnerFrameTheme</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:padding">2dp</item>

        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="SpinnerDropDownItemStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#20808080</item>
    </style>


    <!-- New User Activity Styles -->
    <style name="NewUserActivityLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSecondaryBackground</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- FlightsList styles -->

    <style name="FlightListStyle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FlightListNarrow" parent="FlightListStyle" />

    <style name="FlightListBold" parent="FlightListStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FlightListBold.WrapContent" parent="FlightListBold">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="FlightListToggle" parent="FlightListBold.WrapContent">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FlightListToggle.Narrow" parent="FlightListBold.WrapContent">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="FlightListAirport" parent="FlightListBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="FlightListDateDay" parent="FlightListBold.WrapContent">
        <item name="android:textSize">48sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="FlightListDateMonthYear" parent="FlightListBold.WrapContent">
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
    </style>


    <!-- Settings activity Styles -->

    <style name="SettingsActivityItem" parent="AppTheme">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsActivityHeader" parent="SettingsActivityItem">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsActivitySwitch" parent="SettingsActivityItem">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsActivityDescriptionText" parent="SettingsActivityItem">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="SettingsActivitySubText" parent="SettingsActivityItem">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SettingsActivityHyperLink" parent="SettingsActivitySubText">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsActivityButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsActivityLine" parent="SeparatorLine">
        <item name="android:layout_marginTop">8dp</item>
    </style>


</resources>